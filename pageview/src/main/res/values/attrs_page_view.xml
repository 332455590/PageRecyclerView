<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageView">
        <attr name="selected_indicator_drawable" format="color|reference"/>
        <attr name="selected_indicator_color" format="color"/>
        <attr name="selected_indicator_diameter" format="dimension"/>
        <attr name="unselected_indicator_drawable" format="color|reference"/>
        <attr name="unselected_indicator_color" format="color"/>
        <attr name="unselected_indicator_diameter" format="dimension"/>
        <attr name="indicator_group_height" format="dimension"/>
        <attr name="indicator_group_width" format="dimension"/>
        <attr name="indicator_margin" format="dimension"/>
        <attr name="hide_indicator" format="boolean"/>
        <attr name="endless_loop" format="boolean"/>
        <attr name="loop_interval" format="integer"/>
        <attr name="page_background" format="color|reference"/>
        <attr name="indicator_container_background" format="color|reference"/>
        <attr name="indicator_group_marginLeft" format="dimension"/>
        <attr name="indicator_group_marginTop" format="dimension"/>
        <attr name="indicator_group_marginRight" format="dimension"/>
        <attr name="indicator_group_marginBottom" format="dimension"/>
        <attr name="indicator_group_alignment" >
            <flag name="left" value="9"></flag>
            <flag name="top" value="10"></flag>
            <flag name="right" value="11"></flag>
            <flag name="bottom" value="12"></flag>
            <flag name="center" value="13"></flag>
            <flag name="centerHorizontal" value="14"></flag>
            <flag name="centerVertical" value="15"></flag>
        </attr>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"></enum>
            <enum name="vertical" value="1"></enum>
        </attr>
        <attr name="page_row" format="integer">
            <enum name="one" value="1"></enum>
            <enum name="two" value="2"></enum>
        </attr>
        <attr name="page_column" format="integer">
            <enum name="one" value="1"></enum>
            <enum name="two" value="2"></enum>
            <enum name="three" value="3"></enum>
            <enum name="four" value="4"></enum>
            <enum name="five" value="5"></enum>
        </attr>
        <attr name="layout_flag" format="enum">
            <enum name="linear" value="0"/>
            <enum name="grid" value="1"/>
        </attr>
    </declare-styleable>
</resources>